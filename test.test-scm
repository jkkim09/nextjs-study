 node {
    def imgVersion
    
    stage('SOURCE CHECKOUT') {
        def repo = checkout scm
    }

    stage ('docker') {
        sh "docker ps"
        imgVersion = sh(returnStdout: true, script: "cat ./package.json | grep version | head -1 | awk '{ print \$2 }' | sed 's/[\",]//g'").trim()

        sh "docker build -t test:${imgVersion} ." 
        sh "docker images"
    }

    stage ('docker stop') {
        sh "docker stop test1;docker rm test1"
    }

    stage ('docker run') {
        sh "docker run -d --network cw-net --name test1 test:${imgVersion}"
    }

    stage ('end') {
        echo "BUILD END"
    }
}